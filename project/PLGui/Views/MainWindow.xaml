<Window x:Class="PLGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400" >
    <Grid Margin="0,0,-6.667,-0.333">
        <TabControl x:Name="Tab_Control" Margin="0,0,10,0">
            <!--sign in tab-->
            <TabItem Header="sign in">
                 <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <!--row 1-->
                    <Label Grid.Row="1" Grid.Column="1" Content="enter name" Height="31" Width="93"/>
                    <TextBox x:Name="userName" Grid.Row="1" Grid.Column="2" TextWrapping="Wrap" Text="" MinWidth="100" Width="auto"/>
                    
                    <!--row 2-->
                    <Label Content="enter password" Grid.Column="1" Grid.Row="2" Height="35" Width="93"/>
                    <PasswordBox x:Name="password" Grid.Column="2" Grid.Row="2" Height="35" MinWidth="100" Width="auto"/>

                    <!--row 4-->
                    <Button x:Name="SignInButton" Grid.Column="4" Grid.Row="4" Content="sign in" Width="90" Height="27" Click="SignInButton_Click"/>
                    <Label Grid.Column="1" Grid.Row="4" Content="enter as admin"/>
                    <CheckBox x:Name="IsAdmin" Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" IsChecked ="False"/>
                     <Button Content="debug" Grid.Column="4" Grid.Row="2" Click="Button_Click"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
