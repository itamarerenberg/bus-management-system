<Window x:Class="dotNet5781_03a_1038_0685.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03a_1038_0685"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid">
        <Grid Name="upGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" Width="auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
            <TextBox Grid.Column="0" HorizontalAlignment="Stretch" Height="42" TextWrapping="Wrap" Text="Bus line number:" VerticalAlignment="Stretch"  Width="199" Grid.ColumnSpan="2" FontSize="20" Margin="0,0,198.333,0"/>
            <ComboBox x:Name = "CbBusLine" HorizontalAlignment="Stretch" Margin="198,0,0.8,0.4" VerticalAlignment="Stretch" Grid.ColumnSpan="2"/>
            <TextBox x:Name="Area" Grid.Column="2" HorizontalAlignment="Stretch" Height="42" TextWrapping="Wrap" Text="Area" VerticalAlignment="Stretch" Width="198" TextChanged="TextBox_TextChanged" FontSize="20"/>
            <TextBox Grid.Column="3" HorizontalAlignment="Stretch" Height="42"  TextWrapping="Wrap" Text="{Binding Path= Area}" VerticalAlignment="Stretch" Width="199" Grid.ColumnSpan="2" FontSize="20"/>
        </Grid>
    </Grid>
</Window>
