<Window x:Class="PLGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid Margin="0,0,-6.667,-0.333">
        <Label Content="enter name" HorizontalAlignment="Left" Margin="35,63,0,0" VerticalAlignment="Top" Height="31" Width="93"/>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Height="31" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MinWidth="100" Width="auto" Margin="133,63,0,0"/>
        <Label Content="enter password" HorizontalAlignment="Left" Margin="35,99,0,0" VerticalAlignment="Top" Height="35" Width="93" RenderTransformOrigin="2.129,0.181"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="35" Margin="133,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MinWidth="100" Width="auto"/>
        <Button x:Name="SignInButton" Content="sign in" HorizontalAlignment="Left" Margin="302,134,0,0" VerticalAlignment="Top" Width="90" Height="27" Click="SignInButton_Click"/>
        <Label x:Name="ErrorLabel" Content="" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top" Height="auto" Width="auto" Visibility="Hidden"/>
    </Grid>
</Window>
